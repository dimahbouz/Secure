<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".elements.Intro2"
    android:background="@color/colorBlue">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="80sp">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/size24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_intro2"
            android:textSize="@dimen/size24"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size22"
            android:text="@string/desc_intro2"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/getPerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"></Button>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:justifyContent="space_between"
        app:alignItems="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btnprev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size16"
            android:text="@string/prev"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size16"
            android:clickable="true"/>

        <TextView
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size16"
            android:text="@string/next"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size16"
            android:clickable="true"/>

    </com.google.android.flexbox.FlexboxLayout>

</FrameLayout>