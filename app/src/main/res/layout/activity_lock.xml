<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".LockActivity">

    <LinearLayout
        android:id="@+id/LockContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/startLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/LockActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.andrognito.pinlockview.IndicatorDots
                    android:id="@+id/indicator_dots1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:dotDiameter="12dp"
                    app:dotEmptyBackground="@color/colorPrimary"
                    app:dotFilledBackground="@color/colorBlue"
                    app:dotSpacing="16dp"
                    app:indicatorType="fillWithAnimation" />

                <com.andrognito.pinlockview.PinLockView
                    android:id="@+id/pin_lock_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:keypadButtonSize="72dp"
                    app:keypadDeleteButtonDrawable="@drawable/ic_back"
                    app:keypadDeleteButtonPressedColor="#C8C8C8"
                    app:keypadDeleteButtonSize="16dp"
                    app:keypadHorizontalSpacing="36dp"
                    app:keypadShowDeleteButton="false"
                    app:keypadTextColor="#E6E6E6"
                    app:keypadTextSize="16dp"
                    app:keypadVerticalSpacing="24dp"
                    app:pinLength="6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone">

                <com.andrognito.pinlockview.IndicatorDots
                    android:id="@+id/indicator_dots2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:dotDiameter="12dp"
                    app:dotEmptyBackground="@color/colorPrimary"
                    app:dotFilledBackground="@color/colorBlue"
                    app:dotSpacing="16dp"
                    app:indicatorType="fillWithAnimation" />

                <com.andrognito.pinlockview.PinLockView
                    android:id="@+id/pin_lock_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:keypadButtonSize="72dp"
                    app:keypadDeleteButtonDrawable="@drawable/ic_back"
                    app:keypadDeleteButtonPressedColor="#C8C8C8"
                    app:keypadDeleteButtonSize="16dp"
                    app:keypadHorizontalSpacing="36dp"
                    app:keypadShowDeleteButton="false"
                    app:keypadTextColor="#E6E6E6"
                    app:keypadTextSize="16dp"
                    app:keypadVerticalSpacing="24dp"
                    app:pinLength="6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/code3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone">

                <com.andrognito.pinlockview.IndicatorDots
                    android:id="@+id/indicator_dots3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:dotDiameter="12dp"
                    app:dotEmptyBackground="@color/colorPrimary"
                    app:dotFilledBackground="@color/colorBlue"
                    app:dotSpacing="16dp"
                    app:indicatorType="fillWithAnimation" />

                <com.andrognito.pinlockview.PinLockView
                    android:id="@+id/pin_lock_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:keypadButtonSize="72dp"
                    app:keypadDeleteButtonDrawable="@drawable/ic_back"
                    app:keypadDeleteButtonPressedColor="#C8C8C8"
                    app:keypadDeleteButtonSize="16dp"
                    app:keypadHorizontalSpacing="36dp"
                    app:keypadShowDeleteButton="false"
                    app:keypadTextColor="#E6E6E6"
                    app:keypadTextSize="16dp"
                    app:keypadVerticalSpacing="24dp"
                    app:pinLength="6" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="529dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/copyrightLockActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>